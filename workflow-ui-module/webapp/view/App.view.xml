<mvc:View controllerName="LoanManagementBPA.workflowuimodule.controller.App"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:uxap="sap.uxap" 
    xmlns:suite="sap.suite.ui.commons"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form" 
    xmlns:core="sap.ui.core" 
    xmlns:m="sap.m"
    xmlns="sap.m"
    displayBlock="true" height="100%">
    <App id="app">
        <Page showHeader="false">
            <content>
                <uxap:ObjectPageLayout id="ObjectPageLayout" 
                    showAnchorBar="true" 
                    useIconTabBar="true" 
                    upperCaseAnchorBar="false"
                    sectionTitleVariant="Auto">
                    
                    <uxap:headerTitle>
                        <uxap:ObjectPageDynamicHeaderTitle>
                            <uxap:expandedHeading>
                                <Title text="Header Details" level="H2"/>
                            </uxap:expandedHeading>
                            <uxap:snappedHeading>
                                <Title text="Header Details" level="H2"/>
                            </uxap:snappedHeading>
                        </uxap:ObjectPageDynamicHeaderTitle>
                    </uxap:headerTitle>

                    <uxap:headerContent>
    <m:FlexBox width="100%" wrap="NoWrap" alignItems="Start" justifyContent="SpaceBetween">
        <m:items>
            <m:VBox width="20%">
                <m:Label text="Loan" design="Bold"/>
                <m:Text text="LN-882299" />
            </m:VBox>

            <m:VBox width="20%">
                <m:Label text="BP Number" design="Bold"/>
                <m:Text text="BP-554433" />
            </m:VBox>

            <m:VBox width="20%">
                <m:Label text="Partner Name" design="Bold"/>
                <m:Text text="Peol Technologies" />
            </m:VBox>

            <m:VBox width="20%">
                <m:Label text="Status" design="Bold"/>
                <m:ObjectStatus text="Approved" state="Success" />
            </m:VBox>

            <m:VBox width="20%">
                <m:Label text="Disb. Status" design="Bold"/>
                <m:Text text="Fully Disbursed" />
            </m:VBox>
        </m:items>
    </m:FlexBox>
</uxap:headerContent>

                    <uxap:sections>
<uxap:ObjectPageSection id="trackingSection" title="Tracking" titleUppercase="false">
    <uxap:subSections>
        
        <uxap:ObjectPageSubSection title="Application/Approval" titleUppercase="false">
            <m:FlexBox wrap="NoWrap" alignItems="Center" justifyContent="Start" class="sapUiSmallMargin">
                <m:items>
                    <m:VBox class="sapUiMediumMarginEnd">
                        <m:Label text="Application Date:" />
                        <m:DatePicker value="12/31/2026" displayFormat="MM/dd/yyyy" editable="false" width="11rem" />
                    </m:VBox>
                    <m:VBox class="sapUiMediumMarginEnd">
                        <m:Label text="Approval Date:" />
                        <m:DatePicker value="12/31/2026" displayFormat="MM/dd/yyyy" editable="false" width="11rem" />
                    </m:VBox>
                    <m:VBox class="sapUiMediumMarginEnd">
                        <m:Label text="Application Capital:" />
                        <m:Input value="500,000.00" editable="false" width="11rem" />
                    </m:VBox>
                    <m:VBox>
                        <m:Label text="Commitment Date:" />
                        <m:DatePicker value="12/31/2026" displayFormat="MM/dd/yyyy" editable="false" width="11rem" />
                    </m:VBox>
                </m:items>
            </m:FlexBox>
        </uxap:ObjectPageSubSection>

        <uxap:ObjectPageSubSection title="Offer/Accept" titleUppercase="false">
            <m:FlexBox wrap="NoWrap" alignItems="Center" justifyContent="Start" class="sapUiSmallMargin">
                <m:items>
                    <m:VBox class="sapUiMediumMarginEnd">
                        <m:Label text="Offer On:" />
                        <m:DatePicker value="12/31/2026" displayFormat="MM/dd/yyyy" editable="false" width="12rem" />
                    </m:VBox>
                    <m:VBox class="sapUiMediumMarginEnd">
                        <m:Label text="Offer Until:" />
                        <m:DatePicker value="12/31/2026" displayFormat="MM/dd/yyyy" editable="false" width="12rem" />
                    </m:VBox>
                    <m:VBox class="sapUiMediumMarginEnd">
                        <m:Label text="Acceptance:" />
                        <m:CheckBox selected="true" enabled="false" />
                    </m:VBox>
                    <m:VBox>
                        <m:Label text="Accepted On:" />
                        <m:DatePicker value="12/31/2026" displayFormat="MM/dd/yyyy" editable="false" width="12rem" />
                    </m:VBox>
                </m:items>
            </m:FlexBox>
        </uxap:ObjectPageSubSection>

        <uxap:ObjectPageSubSection title="Contract" titleUppercase="false">
            <m:FlexBox wrap="NoWrap" alignItems="Center" justifyContent="Start" class="sapUiSmallMargin">
                <m:items>
                    <m:VBox class="sapUiMediumMarginEnd">
                        <m:Label text="Contract On:" />
                        <m:DatePicker value="12/31/2026" displayFormat="MM/dd/yyyy" editable="false" width="11rem" />
                    </m:VBox>
                    <m:VBox class="sapUiMediumMarginEnd">
                        <m:Label text="Amortization Date:" />
                        <m:DatePicker value="12/31/2026" displayFormat="MM/dd/yyyy" editable="false" width="11rem" />
                    </m:VBox>
                    <m:VBox class="sapUiMediumMarginEnd">
                        <m:Label text="Maturity Date:" />
                        <m:DatePicker value="12/31/2026" displayFormat="MM/dd/yyyy" editable="false" width="11rem" />
                    </m:VBox>
                    <m:VBox>
