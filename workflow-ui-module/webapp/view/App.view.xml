            <Dialog
    id="commentsDialog"
    title="Comments"
    contentWidth="700px"
    contentHeight="500px"
    draggable="true"
    resizable="true">
 
    <content>
       <suite:Timeline id="commentsTimeline">
 
    <suite:content>
        <suite:TimelineItem
            userName="{user}"
            dateTime="{date}"
            text="{message}"
            userPicture="sap-icon://person-placeholder"/>
    </suite:content>
 
</suite:Timeline>
 
    </content>
 
    <endButton>
        <Button text="Close" press="onCloseCommentsDialog"/>
    </endButton>
 
</Dialog>
