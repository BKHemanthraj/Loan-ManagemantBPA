                        <m:Input value="New York" editable="false" width="12rem" />
                    </m:VBox>
                    <m:VBox class="sapUiMediumMarginEnd">
                        <m:Label text="Organiz. District:" />
                        <m:Input value="District 05" editable="false" width="12rem" />
                    </m:VBox>
                    <m:VBox>
                        <m:Label text="Agent District:" />
                        <m:Input value="AD-99" editable="false" width="12rem" />
                    </m:VBox>
                </m:items>
            </m:FlexBox>
        </uxap:ObjectPageSubSection>

        <uxap:ObjectPageSubSection title="Reference Data" titleUppercase="false">
