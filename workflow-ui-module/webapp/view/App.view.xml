                        <m:DatePicker value="12/31/2026" displayFormat="MM/dd/yyyy" editable="false" width="11rem" />
                    </m:VBox>
                </m:items>
            </m:FlexBox>
        </uxap:ObjectPageSubSection>

    </uxap:subSections>
</uxap:ObjectPageSection>


                  <uxap:ObjectPageSection id="basicDataSection" title="Basic data" titleUppercase="false">
